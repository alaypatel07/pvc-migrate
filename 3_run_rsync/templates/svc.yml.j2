apiVersion: v1
kind: Service
metadata:
  labels:
    app: {{ pod_name }}
  name: {{ svc_name }}
  namespace: {{ pvc_namespace }}
spec:
  ports:
  - name: ssh
    port: 2222
    protocol: TCP
    targetPort: 2222
  selector:
    app: {{ pod_name }}
  type: ClusterIP

---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: {{ pod_name }}
  name: {{ route_name }}
  namespace: {{ pvc_namespace }}
spec:
  port:
    targetPort: 2222
  to:
    kind: Service
    name: {{ svc_name }}
    weight: 100
  wildcardPolicy: None