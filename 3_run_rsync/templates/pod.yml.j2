  containers:
  - name: busybox
    image: {{ transfer_pod_image }}
    args:
    - sleep
    - "1000000"
    volumeMounts:
    - mountPath: "/mnt/{{ pvc_namespace }}/{{ pvc_name }}"
      name: {{ pvc_name }}
