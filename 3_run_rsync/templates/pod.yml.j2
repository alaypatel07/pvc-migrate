apiVersion: v1
kind: Pod
metadata:
  name: {{ pod_name }}
  namespace: {{ pvc_namespace }}
  labels:
    app: {{ pod_name }}
spec:
  volumes:
  - name: {{ pvc_name }}
    persistentVolumeClaim:
      claimName: {{ pvc_name }}
#  - name: public-key
#    secret:
